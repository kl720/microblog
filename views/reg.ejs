<link rel='stylesheet' href='/stylesheets/reg.css'/>
<div class="container">

		<form class="form-horizontal" role="form" method="post">
			<fieldset>

				<legend>
					用户注册
				</legend>
				<div class="form-group">
					<label for="inputUsername" class="col-sm-3 control-label">用户名</label>
					<div class="col-sm-8">
						<input type="text" class="form-control" name="inputUsername" id="inputUsername" placeholder="用户名" required autofocus>
					</div>
				</div>
				<div class="form-group">
					<label for="inputPassword3" class="col-sm-3 control-label">密码</label>
					<div class="col-sm-8">
						<input type="password" class="form-control" name="inputPassword3" id="inputPassword3" placeholder="密码" required>
					</div>
				</div>

				<div class="form-group">
					<label for="inputPassword4" class="col-sm-3 control-label">再次输入密码</label>
					<div class="col-sm-8">
						<input type="password" class="form-control" name="inputPassword4" id="inputPassword4" placeholder="再次" required>
					</div>
				</div>

				<div class="form-group">
					<div class="col-sm-offset-3 col-sm-8">
						<button type="submit" class="btn btn-lg btn-block btn-success">
							注册
						</button>
						&nbsp;&nbsp;
						<button type="cancel" class="btn btn-lg btn-block btn-primary">
							取消
						</button>
					</div>
				</div>

			</fieldset>
		</form>
</div>
